{
  "name": "archbase-react",
  "version": "3.0.7",
  "private": true,
  "type": "module",
  "description": "Monorepo for Archbase React v3 - Modern TypeScript React Component Library",
  "author": "Edson Martins <edsonmartins2005@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:edsonmartins/archbase-react.git"
  },
  "homepage": "https://react.archbase.com.br",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "turbo dev",
    "dev:link": "node scripts/dev-link.js",
    "dev:restore": "node scripts/dev-link.js --restore",
    "link:project": "node scripts/link-to-project.js",
    "build": "node scripts/build-unified.js",
    "postbuild": "pnpm generate:catalog",
    "build:dev": "node scripts/build-unified.js --debug",
    "build:dev:no-docs": "node scripts/build-unified.js --debug --no-docs",
    "build:prod": "node scripts/build-unified.js --publish",
    "build:prod-only": "node scripts/build-unified.js --no-docs",
    "pack": "node scripts/pack.js",
    "pack:dev": "node scripts/pack.js --debug",
    "publish:prod": "node scripts/publish.js",
    "publish:dev": "node scripts/publish-debug.js",
    "publish:dev:no-docs": "node scripts/publish-debug.js --no-docs",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "version:update": "node scripts/update-version.js",
    "clean": "node scripts/clean.js",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "lint": "turbo lint",
    "generate:catalog": "node scripts/generate-component-catalog.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.5",
    "esbuild": "0.20.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@turbo/gen": "^2.3.0",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "8.18.0",
    "@typescript-eslint/parser": "8.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.0.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.4.2",
    "turbo": "^2.8.0",
    "typescript": "~5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.8"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.20.2"
    }
  }
}
