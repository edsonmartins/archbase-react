{
  "name": "@archbase/core",
  "version": "3.0.0",
  "description": "Core utilities and foundation for Archbase React v3",
  "author": "Edson Martins <edsonmartins2005@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./styles": {
      "import": "./dist/styles.css"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "NODE_OPTIONS=\"--max-old-space-size=16384\" vite build --watch",
    "build": "NODE_OPTIONS=\"--max-old-space-size=16384\" vite build && tsc --emitDeclarationOnly",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "peerDependencies": {
    "react": "^18.3.0 || ^19.0.0",
    "react-dom": "^18.3.0 || ^19.0.0",
    "@mantine/core": "8.1.2",
    "@mantine/hooks": "8.1.2",
    "@mantine/dates": "8.1.2",
    "@mantine/modals": "8.1.2",
    "@mantine/notifications": "8.1.2"
  },
  "dependencies": {
    "inversify": "^6.2.0",
    "inversify-react": "^1.2.0",
    "reflect-metadata": "^0.2.2",
    "date-fns": "^2.30.0",
    "lz-string": "^1.5.0",
    "i18next": "^23.10.0",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "dayjs": "^1.11.10",
    "lodash": "^4.17.21",
    "validator": "^13.11.0",
    "uuid": "^9.0.1",
    "react-i18next": "^13.5.0",
    "i18next-browser-languagedetector": "^7.2.0",
    "usehooks-ts": "^2.16.0",
    "react-router-dom": "^6.22.0",
    "@tanstack/react-query": "^5.25.0",
    "react-use": "^17.5.0",
    "use-query-params": "^2.2.1",
    "react-pro-sidebar": "^1.1.0",
    "query-string": "^8.2.0",
    "@juggle/resize-observer": "^3.4.0",
    "dot-prop": "^8.0.2"
  },
  "devDependencies": {
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "~5.7.2",
    "vite": "^6.0.3",
    "vitest": "^2.1.8"
  }
}