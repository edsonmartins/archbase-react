{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": false,
    "noEmit": false,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "composite": true,
    
    // Same config as main lib
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "test", 
    "**/*.test.ts", 
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/context/ArchbaseAppContext.tsx",
    "src/context/ArchbaseGlobalProvider.tsx", 
    "src/helper/ArchbaseClickOutside.tsx",
    "src/patterns/ArchbaseV1V2CompatibilityPattern.tsx",
    "src/fallback/ArchbaseSafeMigrationWrapper.tsx"
  ]
}
