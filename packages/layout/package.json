{
  "name": "@archbase/layout",
  "version": "3.0.0",
  "description": "Layout components for Archbase React",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "NODE_OPTIONS=\"--max-old-space-size=8192\" vite build && NODE_OPTIONS=\"--max-old-space-size=16384\" tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.{ts,tsx}",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "typescript",
    "layout",
    "archbase"
  ],
  "author": "Edson Martins",
  "license": "MIT",
  "dependencies": {
    "@archbase/core": "workspace:*",
    "@archbase/data": "workspace:*",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.1.2",
    "i18next": "^25.3.1",
    "lodash": "4.17.21",
    "prop-types": "15.8.1",
    "css-element-queries": "^1.2.3",
    "usehooks-ts": "^2.16.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/lodash": "^4.14.200",
    "@types/prop-types": "^15.7.12",
    "typescript": "^5.7.0",
    "vite": "^6.3.5",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "@mantine/core": "8.1.2",
    "@mantine/hooks": "8.1.2",
    "@mantine/modals": "8.1.2",
    "@mantine/notifications": "8.1.2",
    "@tabler/icons-react": "^3.27.0"
  }
}