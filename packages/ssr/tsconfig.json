{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "skipLibCheck": true,
    "noEmit": false,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
