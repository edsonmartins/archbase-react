{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "declaration": true,
    "declarationMap": false,
    "skipLibCheck": true,
    "noEmit": false,
    "tsBuildInfoFile": "./.tsbuildinfo",
    
    // Same config as main lib
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "test", 
    "**/*.test.ts", 
    "**/*.test.tsx"
  ]
}
