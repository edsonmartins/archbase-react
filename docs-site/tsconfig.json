{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@archbase/core": [
        "../packages/core/src"
      ],
      "@archbase/components": [
        "../packages/components/src"
      ],
      "@archbase/data": [
        "../packages/data/src"
      ],
      "@archbase/layout": [
        "../packages/layout/src"
      ],
      "@archbase/admin": [
        "../packages/admin/src"
      ],
      "@archbase/security": [
        "../packages/security/src"
      ],
      "@archbase/template": [
        "../packages/template/src"
      ],
      "@archbase/advanced": [
        "../packages/advanced/src"
      ],
      "@archbase/ssr": [
        "../packages/ssr/src"
      ],
      "@archbase/feature-flags": [
        "../packages/feature-flags/src"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mdx"
  ],
  "exclude": [
    "node_modules"
  ]
}
