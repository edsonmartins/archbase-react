{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "noEmit": false,
    "baseUrl": "./src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "*": [
        "*",
      ],
      "@components/*": ["components/*"],
      "@hooks/*": ["components/hooks/*"],
      "@demo/*": ["demo/*"],
      "@emaileditor/core/*": ["components/emaileditor/core/*"],
      "@emaileditor/editor/*": ["components/emaileditor/editor/*"],
      "@emaileditor/extensions/*": ["components/emaileditor/extensions/*"],
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "allowJs": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "types": ["@testing-library/jest-dom","node", "reflect-metadata","jest", "vite/client"],
  },
  "exclude": [
    "coverage",
    "config",
    "dist",
    "node_modules/**"
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "declaration.d.ts"]
}
